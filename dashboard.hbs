<!-- EDIT MODAL -->
    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-window-close" aria-hidden="true"></span></button>
                </div>
                <form method="post" action="/user/update">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="FnewName">First Name</label>
                        <input class="form-control" name="FnewName" id="FnewName" type="text" value="{{user.first_name}}" required>
                    </div>
                    <div class="form-group">
                        <label for="LnewName">Last Name</label>
                        <input class="form-control" name="LnewName" id="LnewName" type="text" value="{{user.last_name}}" required>
                    </div>
                    <div class="form-group">
                        <label for="newAddress">Address</label>
                        <input type="text" class="form-control" name="newAddress" id="newAddress" value="{{user.address}}" required>
                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="submit" class="btn btn-warning btn-lg" style="width: 100%"><span class="fa fa-check"></span> Update</button>
                </div>
                </form>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- UPDATE PASSWORD MODAL -->
    <div class="modal fade" id="ChangePassModal" tabindex="-1" role="dialog" aria-labelledby="changepass" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title custom_align" id="Heading">Change Password</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-window-close" aria-hidden="true"></span></button>
                </div>
                <form method="post" action="/user/changepass">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="newPassword">New Password</label>
                            <input class="form-control" name="newPassword" id="newPassword" type="password" placeholder="e.g: asd123" required>
                        </div>
                    </div>
                    <div class="modal-footer ">
                        <button type="submit" class="btn btn-warning btn-lg" style="width: 100%"><span class="fa fa-check"></span> Update</button>
                    </div>
                </form>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
